{
  "name": "mockoon",
  "description": "Mock API in seconds",
  "version": "1.2.0",
  "author": {
    "name": "Guillaume Monnet",
    "email": "hi@255kb.com",
    "url": "https://255kb.com/"
  },
  "license": "MIT",
  "repository": "https://github.com/255kb/mockoon",
  "homepage": "https://mockoon.com",
  "build": {
    "appId": "com.mockoon.app",
    "productName": "Mockoon",
    "directories": {
      "output": "packages",
      "app": "dist"
    },
    "win": {
      "target": "nsis",
      "publisherName": "Guillaume Monnet",
      "rfc3161TimeStampServer": "http://sha256timestamp.ws.symantec.com/sha256/timestamp"
    },
    "nsis": {
      "artifactName": "mockoon.setup.${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "type": "distribution",
      "artifactName": "mockoon.setup.${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "icon": "build"
    }
  },
  "scripts": {
    "lint": "ng lint --type-check",
    "test": "ng test",
    "test-spectron": "rm -rf ./tmp && mocha",
    "setversion": "node ./scripts/version-bump.js",
    "serve:electron": "electron ./dist --serve",
    "serve:app": "ng build --configuration=development --watch --output-hashing=all",
    "build:dev": "rm -rf ./dist && ng build --prod --configuration=development",
    "build:prod": "rm -rf ./dist && ng build --prod --configuration=production",
    "clean-packages": "rm -rf ./packages",
    "package:win": "npm run clean-packages && electron-builder --win",
    "package:linux": "npm run clean-packages && electron-builder --linux",
    "package:mac": "npm run clean-packages && electron-builder --mac"
  },
  "dependencies": {
    "@angular/animations": "6.1.10",
    "@angular/common": "6.1.10",
    "@angular/compiler": "6.1.10",
    "@angular/core": "6.1.10",
    "@angular/forms": "6.1.10",
    "@angular/http": "6.1.10",
    "@angular/platform-browser": "6.1.10",
    "@angular/platform-browser-dynamic": "6.1.10",
    "@angular/router": "6.1.10",
    "@ng-bootstrap/ng-bootstrap": "3.3.0",
    "array-move": "1.0.0",
    "bootstrap": "4.1.3",
    "brace": "0.11.1",
    "core-js": "2.5.7",
    "dummy-json": "2.0.0",
    "electron-is-dev": "1.0.1",
    "electron-json-storage": "4.1.0",
    "electron-window-state": "5.0.1",
    "express": "4.16.4",
    "firebase": "5.5.4",
    "http-proxy-middleware": "0.19.0",
    "killable": "1.0.1",
    "lodash": "4.17.11",
    "material-design-icons": "3.0.1",
    "mime-types": "2.1.20",
    "ng2-ace-editor": "0.3.8",
    "ng2-dragula": "2.1.0",
    "ngx-markdown": "6.3.0",
    "object-path": "0.11.4",
    "request": "2.88.0",
    "rxjs": "6.3.3",
    "semver": "5.6.0",
    "spinthatshit": "1.0.4",
    "uuid": "3.3.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "2.5.4",
    "@angular-builders/dev-server": "2.3.5",
    "@angular-devkit/build-angular": "0.8.5",
    "@angular-devkit/core": "0.8.5",
    "@angular/cli": "6.2.5",
    "@angular/compiler-cli": "6.1.10",
    "@angular/language-service": "6.1.10",
    "@types/jasmine": "2.8.9",
    "@types/jasminewd2": "2.0.5",
    "@types/node": "10.11.7",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "codelyzer": "4.5.0",
    "electron": "3.0.4",
    "electron-builder": "20.28.4",
    "electron-reload": "1.2.5",
    "istanbul-instrumenter-loader": "3.0.1",
    "jasmine-core": "2.99.1",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.4",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "mocha": "5.2.0",
    "replace-in-file": "3.4.2",
    "spectron": "5.0.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "2.9.2"
  }
}
